        String makeURL = "https://thawing-beach-68207.herokuapp.com/carmodelmakes/" + makeId;
        DataBaseHelper dbh2 = new DataBaseHelper(makeId, makeURL, 0);
        dbh2.execute();

        //getModel();
        ArrayAdapter<CarModel> dataAdapter = new ArrayAdapter<CarModel>(this,
                android.R.layout.simple_spinner_item, carModelList);
        dataAdapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
        dataAdapter.notifyDataSetChanged();
        //This new adapter is now listening to you.
        //onItemSlected now responds to spinner 2
        model.setAdapter(dataAdapter);
        again=true;




        //=============================


        //String item = parent.getItemAtPosition(position).toString();

        //Hard coded example.
        //If our first spinner is ferrari.
        if (item.contentEquals("Ferrari")) {
            model.setOnItemSelectedListener(this);//We will now listen to model spinner
            //Replace this with arraylist of models from json.
            List<String> list = new ArrayList<String>();
            list.add("f430");
            list.add("458");
